@page
@model RenspandWebsite.Pages.Profiles.ProfileSiteModel
<link rel="stylesheet" href="~/css/ProfileStylesheet.css" />
@{
}

<div class="profile-navbar">
    <a href="/" class="brand">ProfileSite</a>
</div>

<div class="profile-container">
    <form method="post" asp-page-handler="SaveChanges" class="profile-card">
        <h2>Profile Information</h2>

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-input" disabled />
            <span asp-validation-for="Username" class="error-text"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-input" disabled />
            <span asp-validation-for="Email" class="error-text"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="error-text"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-input" />
            <span asp-validation-for="PhoneNumber" class="error-text"></span>
        </div>

        <button class="btn primary">Save Changes</button>
    </form>

    <form method="post" asp-page-handler="ChangePassword" class="profile-card">
        <h2>Change Password</h2>

        <div class="form-group">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" type="password" class="form-input" />
            <span asp-validation-for="CurrentPassword" class="error-text"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" type="password" class="form-input" />
            <span asp-validation-for="NewPassword" class="error-text"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-input" />
            <span asp-validation-for="ConfirmPassword" class="error-text"></span>
        </div>

        <button type="submit" class="btn secondary">Change Password</button>
    </form>

    <form method="post" asp-page-handler="DeleteProfile" class="profile-card danger-card">
        <h2>Delete Profile</h2>
        <p>This action cannot be undone.</p>
        <button type="submit" class="btn danger">Delete Profile</button>
    </form>
</div>
