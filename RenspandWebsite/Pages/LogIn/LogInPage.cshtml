@page
@model RenspandWebsite.Pages.LogIn.LogInPageModel
@{
}

<div class="LogInContainer">
    <div class="LogInContainerHeader">
        <h1>Log in</h1>
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Username" class="col-form-label"></label>
            <div>
                <input asp-for="Username" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <div>
            @Model.ErrorMessage
        </div>
        <div class="form-group d-flex gap-2">
            <button class="btn btn-outline-dark" type="submit">Log in</button>
            <a asp-page="/Profiles/Create" class="btn btn-primary">Lav Profil</a>
        </div>
    </form>
</div>
