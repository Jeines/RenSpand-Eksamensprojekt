@page
@model RenspandWebsite.Pages.OrderHandling.OrderSystemModel

<link rel="stylesheet" href="~/css/OrdersystemStylesheet.css" />

@{
    ViewData["Title"] = "Order System";
}

<h1>Bestil Skraldespandsrens</h1>
<div class="container-fluid">
<form method="post">
    <div>
        <label>Navn:</label>
        <input asp-for="Name" placeholder="Navn" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label>Telefonnummer:</label>
        <input asp-for="PhoneNumber" placeholder="TelefonNummer" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div>
        <label>Email:</label>
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label>Vej:</label>
        <input asp-for="Street" placeholder="Vej Navn" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div>
        <label>By:</label>
        <input asp-for="City" placeholder="By" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div>
        <label>Postnummer:</label>
        <input asp-for="ZipCode" placeholder="Postnummer" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="col-sm-4 col-form-label">Arbejde:</label>
        <div>
            <select class="form-select" asp-for="SelectedWorkIds" asp-items="Model.WorkSelectList" multiple></select>
        </div>
    </div>

    <div>
        <label for="date">Vælg dato:</label>
        <input asp-for="DateStart" type="date" class="form-control" />
    </div>

    <p>Valgt dato: @Model.DateStart.ToShortDateString()</p>

    <div>
        <label for="date">Vælg dato for din skraldespand bliver tømt:</label>
        <input asp-for="TrashCanEmptyDate" type="date" class="form-control" />
    </div>

    <p>Valgt dato: @Model.TrashCanEmptyDate.ToShortDateString()</p>

    <button type="submit">fortsæt</button>
</form>
</div>