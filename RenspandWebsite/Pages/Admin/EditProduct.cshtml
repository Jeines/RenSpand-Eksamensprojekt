@page
@model             EditProductModel
@{
	ViewData["Title"] = "Ret Produkt";
}

<form method="post">
	<div class="form-group">
		<label asp-for="Product.Id" class="control-lable"></label>
		<input asp-for="Product.Id" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group">
		<label asp-for="Product.Name" class="control-lable"></label>
		<input asp-for="Product.Name" class="form-control" />
		<span asp-validation-for="Product.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Product.Description" class="control-lable"></label>
		<input asp-for="Product.Description" class="form-control" />
		<span asp-validation-for="Product.Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Product.Price" class="control-lable"></label>
		<input asp-for="Product.Price" class="form-control" />
		<span asp-validation-for="Product.Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Opdater" class="btn btn-primary" />
		<a asp-page="GetAllProducts" class="btn btn-secondary ml-2">Tilbage</a>
	</div>
</form>