@page
@model             CreateProductModel
@{
}
@{
    ViewData["Title"] = "Opret Produkt";
}

<h2 class="display-4">Opret Produkt</h2>


<form method="post" class="p-4 bg-light rounded shadow-sm">
    <div class="form-group">
        <label asp-for="Product.Id"></label>
        <input asp-for="Product.Id" class="form-control" />
        <span asp-validation-for="Product.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Name">Navn</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description">Beskrivelse</label>
        <input asp-for="Product.Description" class="form-control" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price">Pris</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Opret Produkt</button>
        <a asp-page="GetAllProducts" class="btn btn-secondary ml-2">Annullér</a>
    </div>
</form>


