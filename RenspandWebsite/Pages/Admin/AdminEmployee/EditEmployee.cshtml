@page
@model RenspandWebsite.Pages.Admin.AdminEmployee.EditEmployeeModel
@{
    ViewData["Title"] = "Ret Medarbejder";
}
<h1>Ret Medarbejder</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Employee.Id" class="control-label"></label>
        <input asp-for="Employee.Id" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group">
        <label asp-for="Employee.Username" class="control-label"></label>
        <input asp-for="Employee.Username" class="form-control" />
        <span asp-validation-for="Employee.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Password" class="control-label"></label>
        <input asp-for="Employee.Password" class="form-control" type="password" />
        <span asp-validation-for="Employee.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Name" class="control-label"></label>
        <input asp-for="Employee.Name" class="form-control" />
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Email" class="control-label"></label>
        <input asp-for="Employee.Email" class="form-control" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.PhoneNumber" class="control-label"></label>
        <input asp-for="Employee.PhoneNumber" class="form-control" />
        <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.YearsOfExperians" class="control-label"></label>
        <input asp-for="Employee.YearsOfExperians" class="form-control" />
        <span asp-validation-for="Employee.YearsOfExperians" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Salary" class="control-label"></label>
        <input asp-for="Employee.Salary" class="form-control" />
        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeQualificationsString" class="control-label">Kvalifikationer (kommasepareret)</label>
        <input asp-for="EmployeeQualificationsString" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Opdater" class="btn btn-primary" />
        <a asp-page="/Admin/AdminEmployee/GetAllEmployees" class="btn btn-secondary ml-2">Tilbage</a>
    </div>
</form>

