@page
@model RenspandWebsite.Pages.Admin.AdminManageFAQ.CreateFaqModel
@{
    ViewData["Title"] = "Tilføj FAQ";
}

<h2>Tilføj ny FAQ</h2>

<form method="post">
    <div class="form-group">
        <label>Spørgsmål</label>
        <input asp-for="Question" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Svar</label>
        <textarea asp-for="Answer" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Tilføj</button>
    <a asp-page="AdminFaq" class="btn btn-secondary">Tilbage</a>
</form>
