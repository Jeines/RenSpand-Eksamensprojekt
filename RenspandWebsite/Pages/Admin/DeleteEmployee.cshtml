@page
@model RenspandWebsite.Pages.Admin.DeleteEmployeeModel
@{
	ViewData["Title"] = "Slet Medarbejder";
}
<h1>Delete Confirmation></h1>
<div class="alert alert-danger">
	<h5>Er du sikker på at du vil slette - @Model.Employee.Name</h5>
	<form method="post">
		<button type="submit" class="btn btn-danger">Yes</button>
		<a class="btn btn-primary" asp-page="/Admin/GetAllEmployees">No</a>
	</form>
</div>